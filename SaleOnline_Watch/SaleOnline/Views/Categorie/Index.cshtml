@model IEnumerable<PrjModel.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/HomePage/Admin.cshtml";
}

<h2>Danh sách Loại Sản Phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Tên Loại
        </th>
        <th>
            Mô tả
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
